@using Microsoft.AspNet.Identity

@if (Session["UserId"] == null)
{
    <ul class="navbar-nav navbar-right text-white">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-white" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-white" })</li>
    </ul>
}
else
{
    <ul class="navbar-nav navbar-right">
          <li>@Html.ActionLink("Log Out", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-white" })</li>
    </ul>
}